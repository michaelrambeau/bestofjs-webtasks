{
  "name": "bestofjs-webtasks",
  "version": "0.1.0",
  "description": "Bestof.js.org micro-services built with webtask.io",
  "scripts": {
    "start": "node user-content-api/src/server",
    "build": "webpack",
    "deploy": "node user-content-api/deploy-webtask",
    "deploy-production": "node user-content-api/deploy-webtask",
    "test": "npm run cleanup && npm run setup && npm run test-api | faucet",
    "test-debug": "npm run cleanup && npm run setup && npm run test-api",
    "test-ava": "tape test/index.js --verbose",
    "test-api": "tape test/index.js",
    "setup": "node commands/setup",
    "cleanup": "node commands/cleanup"
  },
  "dependencies": {
    "body-parser": "^1.14.2",
    "dotenv": "^1.2.0",
    "express": "^4.13.3",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.0.0",
    "mongoose": "^4.3.7",
    "webtask-tools": "^1.2.0"
  },
  "devDependencies": {
    "faucet": "0.0.1",
    "mongodb": "^2.0.0",
    "supertest": "^1.1.0",
    "tape": "^4.4.0"
  },
  "keywords": [
    "micro-services",
    "webtask.io"
  ],
  "author": "Michael Rambeau",
  "license": "ISC"
}
